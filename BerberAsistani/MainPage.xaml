<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BerberAsistani.YeniRandevuPage"
             Title="Yeni Randevu"
             BackgroundColor="White">

    <VerticalStackLayout Spacing="20" Padding="25" VerticalOptions="Center">

        <Label Text="Yeni Randevu Oluştur" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#2196F3"/>

        <Frame Padding="5" BorderColor="Gray" CornerRadius="10">
            <Entry x:Name="EntAd" Placeholder="Müşteri Adı Soyadı" FontSize="16" />
        </Frame>

        <Frame Padding="0" BorderColor="Gray" CornerRadius="10">
            <Picker x:Name="PickIslem" Title="Yapılacak İşlem">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Saç Kesimi</x:String>
                        <x:String>Sakal Kesimi</x:String>
                        <x:String>Saç + Sakal</x:String>
                        <x:String>Çocuk Tıraşı</x:String>
                        <x:String>Yıkama / Fön</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Frame>

        <Grid ColumnDefinitions="*,*">
            <VerticalStackLayout Grid.Column="0" Spacing="5" Margin="0,0,5,0">
                <Label Text="Başlangıç Saati" TextColor="Gray"/>
                <Frame Padding="0" BorderColor="#2196F3" CornerRadius="10">
                    <TimePicker x:Name="TmrBaslangic" TextColor="#2196F3" FontAttributes="Bold" HorizontalOptions="Center"/>
                </Frame>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Spacing="5" Margin="5,0,0,0">
                <Label Text="Süre (Dakika)" TextColor="Gray"/>
                <Frame Padding="0" BorderColor="#2196F3" CornerRadius="10">
                    <Picker x:Name="PickSure" SelectedIndex="1"> <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:Int32}">
                                <x:Int32>15</x:Int32>
                                <x:Int32>30</x:Int32>
                                <x:Int32>45</x:Int32>
                                <x:Int32>60</x:Int32>
                                <x:Int32>90</x:Int32>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Frame>
            </VerticalStackLayout>
        </Grid>

        <Button Text="Randevuyu Kaydet" 
                Clicked="OnKaydetClicked"
                BackgroundColor="#2196F3" 
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,20,0,0"
                FontAttributes="Bold" FontSize="18"/>

        <Button Text="Vazgeç" 
                Clicked="OnIptalClicked"
                BackgroundColor="Transparent" 
                TextColor="Red"/>

    </VerticalStackLayout>
</ContentPage>